<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.gp_t1_xml.BookingHotelActivity">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_my_calendar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="102dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="17dp" />

    <TextView
        android:id="@+id/textViewFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:text="From" />

    <TextView
        android:id="@+id/textViewTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewFrom"
        android:layout_alignStart="@+id/textViewFrom"
        android:layout_below="@+id/textViewFrom"
        android:layout_marginTop="23dp"
        android:text="To" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_my_calendar"
        android:layout_below="@+id/imageButton"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark"
        android:layout_below="@+id/imageButton2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />

    <TextView
        android:id="@+id/textViewFromDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewFrom"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/imageButton"
        android:layout_toRightOf="@+id/imageButton"
        android:text="Date" />

    <TextView
        android:id="@+id/textViewToDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewTo"
        android:layout_centerHorizontal="true"
        android:text="Date" />

    <TextView
        android:id="@+id/textViewSingleRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="Number of Single room"
        android:layout_below="@+id/imageView2"
        android:layout_alignLeft="@+id/textViewTo"
        android:layout_alignStart="@+id/textViewTo" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewSingleRoom"
        android:layout_alignStart="@+id/textViewSingleRoom"
        android:layout_below="@+id/textViewSingleRoom"
        android:layout_marginTop="33dp"
        app:srcCompat="@android:drawable/arrow_up_float" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/arrow_down_float"
        android:layout_alignTop="@+id/imageButton4"
        android:layout_alignRight="@+id/imageButton2"
        android:layout_alignEnd="@+id/imageButton2" />

    <TextView
        android:id="@+id/textViewNumberOfSingleRoom"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/imageButton5"
        android:layout_toLeftOf="@+id/imageButton5"
        android:layout_toRightOf="@+id/imageButton4"
        android:layout_toStartOf="@+id/imageButton5"
        android:text="1000" />

    <TextView
        android:id="@+id/textViewDoubleRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Number of double room"
        android:layout_below="@+id/imageView3"
        android:layout_alignLeft="@+id/imageButton4"
        android:layout_alignStart="@+id/imageButton4" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/arrow_up_float"
        android:layout_alignTop="@+id/textViewNumberOfDoubleRooms"
        android:layout_alignLeft="@+id/textViewDoubleRoom"
        android:layout_alignStart="@+id/textViewDoubleRoom" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/arrow_down_float"
        android:layout_below="@+id/textViewDoubleRoom"
        android:layout_toRightOf="@+id/textViewNumberOfDoubleRooms"
        android:layout_toEndOf="@+id/textViewNumberOfDoubleRooms"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/textViewNumberOfDoubleRooms"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/imageButton7"
        android:layout_toRightOf="@+id/imageButton6"
        android:text="1000" />

    <Button
        android:id="@+id/buttonAssureReserve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp"
        android:text="Reserve" />

    <TextView
        android:id="@+id/textView_singleRoomPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_toEndOf="@+id/textViewSingleRoom"
        android:layout_toRightOf="@+id/textViewSingleRoom"
        android:text="Price" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton5"
        android:layout_marginTop="14dp"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView_doubleRoomPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView_singleRoomPrice"
        android:layout_alignRight="@+id/textView_singleRoomPrice"
        android:layout_below="@+id/imageView3"
        android:text="Price" />
</RelativeLayout>
